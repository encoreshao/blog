!!! 5
%html
  %head
    %meta{ charset: 'utf-8' }
    %meta{ content: 'width=device-width, initial-scale=1.0', name: 'viewport' }
    %meta{ 'http-equiv' => 'X-UA-Compatible', content: 'IE=edge' }

    %title= site_title
    %meta{ name: 'author', content: I18n.t('author') }
    %meta{ name: 'keywords', content: I18n.t('keywords') }
    %meta{ name: 'description', content: site_description }

    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag 'application', media: "all", 'data-turbolinks-track': 'reload'
    / Le HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
      %script{ src: 'http://html5shim.googlecode.com/svn/trunk/html5.js' }
    = csrf_meta_tags
    = render 'shared/gtag'

  %body{class: "home blog wpb-js-composer js-comp-ver-5.0.1 vc_responsive #{'mobile' if mobile_device?}"}
    = render 'shared/animation' if animation?

    = render 'shared/top_navbar'
    = render 'shared/navbar'

    %section.container
      #content-wrappers
        = yield

    = render 'shared/footer'
    = render 'shared/cookieconsent'
    = render 'shared/baidu_tongji' unless Rails.env.development?

    = yield :javascript
