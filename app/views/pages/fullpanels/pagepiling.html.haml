      $('#pagepiling').pagepiling({
        sectionsColor: ['rgba(10, 164, 211, 1)', '#2ebe21', '#efc32f', '#51bec4'],
        scrollingSpeed: 500,
        navigation: {
          'position': 'right',
          'tooltips': ['Personal', 'Language', 'Database', 'Service']
        }
      });
    })(jQuery)
