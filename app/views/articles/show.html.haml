.post-wrapper
  %article#post-481.basic-post.post-picture.post.type-post.status-publish.format-image.has-post-thumbnail.hentry.category-fashion.tag-fashion-show.tag-photography.post_format-post-format-image
    .thumbnail
      %img.attachment-blog-image.size-blog-image.wp-post-image{src: banner_iamge_url}/
    .post-inner
      .post-title
        %h1
          = @article.title
      .meta
        %span
          %i.fa.fa-calendar
          = @article.published_date
        %span
          %i.fa.fa-flag
          = @article.category_name(I18n.default_locale)
        %span.btn-action{data: {name: 'up'}}
          %i.fa.fa-thumbs-up
          = I18n.t('action.like')
          = raw "(<count>#{@article.likes_count}</count>)"
        %span.btn-action{data: {name: 'down'}}
          %i.fa.fa-thumbs-down
          = I18n.t('action.dislike')
          = raw "(<count>#{@article.dislike_count}</count>)"
      .post-content
        = raw @article.content

      - unless @article.tags.empty?
        %footer.content-footer
          .tags
            %i.fa.fa-tags
            %label #{I18n.t('tips.tags')}:
            - @article.tags.each do |tag|
              = tag.name

        .share-buttons
          .addthis_toolbox.addthis_default_style
            %h4= I18n.t('tips.share_this_article')
            %a.addthis_button_facebook
              %span.fa.fa-facebook
            %a.addthis_button_twitter
              %span.fa.fa-twitter
            %a.addthis_button_weibo
              %span.fa.fa-weibo
            %a.addthis_button_weixin
              %span.fa.fa-weixin
            %a.addthis_button_tencent_weibo
              %span.fa.fa-tencent-weibo
            %a.addthis_button_wechat
              %span.fa.fa-wechat
            %a.addthis_button_telegram
              %span.fa.fa-telegram
            %a.addthis_button_qq
              %span.fa.fa-qq

        #post-nav
          .post-previous
            %span.title= I18n.t('tips.previous_post')
            %h3
              %i.fa.fa-angle-double-left
              = 'Even the Celebrities Wanted to Dress Weather...'
        #related-posts
          .inner
            %h3.widget-title= I18n.t('tips.related_posts')
            %ul
              - 3.times do |i|
                %li
                  .thumbnail
                    %a
                      %img.attachment-small-thumb.size-small-thumb.wp-post-image{src: "/assets/photos/encore.jpg"}/
                  %a Summer 2014 Style Inspirations Just for You
                  .meta Aug 12th, 2014

  / Author
  .single-author.box.clearfix
    .wrapper.clearfix
      .thumbnail
        %img.avatar.avatar-80.photo{src: "/assets/photos/encore.jpg"}/
      .info.clearfix{style: 'width: 100%;margin-bottom: 20px;'}
        Hey, I'm Encore Shao, a developer from Shanghai, China. I create websites and web based applications from the ground up. If you want to find out more about me, you can follow me on Twitter or Google Plus.

      = render partial: 'shared/social_links', locals: { class_name: 'social-profiles' }

    .clearfix

  #comment-widget.comments.box
    %h3.widget-title There's #{@article.comments.count} Comments
    .comments-list
      %ul
        - @article.comments.each do |comment|
          %li.comment.byuser.comment-author-themewarrior.bypostauthor.even.thread-even.depth-1{id: "comment-#{comment.id}"}
            .thumbnail
              %i.fa.fa-user-o{style: "font-size: 4em;"}
            .comment-detail
              .author
                = comment.user.try(:author_name) || 'Anonymous'
                %span -
                %time= comment.created_at.strftime('%B %d, %Y')
              %p= comment.content
              .reply
                %a.comment-reply-link{onclick: "return addComment.moveForm( \"comment-#{comment.id}\", \"#{comment.id}\", \"respond\", \"503\" )", rel: "nofollow"} Reply

  / Comment
  #comment-form-widget.comments.box
    #respond.comment-respond
      %h3#reply-title.comment-reply-title
        %h3.widget-title
          %i.fa.fa-comments
          = I18n.t('tips.leave_a_comment')
        %small
          %a#cancel-comment-reply-link{href: "/grateful/2015/03/01/breath-of-fresh-air-in-the-morning/#respond", rel: "nofollow", style: "display:none;"}= I18n.t('action.cancel_reply')

      = form_tag comment_articles_path, method: :POST, class: 'comment-form', id: 'commentform' do
        .comment-form-wrapper
          .input.message
            %label
              = I18n.t('form.message')
              %span.red *
            %textarea#message{name: "comment"}
          .input.name
            %label
              = I18n.t('form.name')
              %span.red *
            %input#input-name.input-s{name: "author", type: "text", value: ""}/
          .input.email
            %label
              = I18n.t('form.email')
            %input#input-email.input-s{name: "email", type: "text", value: ""}/
          .input.email
            %label= I18n.t('form.website_url')
            %input#input-email.input-s{name: "url", type: "text", value: ""}/
          %p.form-submit
            = submit_tag I18n.t('action.submit'), class: 'btn btn-primary bg-green', id: 'submit'
            %input#comment_post_ID{name: "comment_post_ID", type: "hidden", value: @article.id}/
            %input#comment_parent{name: "comment_parent", type: "hidden", value: "0"}/

        %p{style: "display: none;"}
          %input{name: "permalink", type: "hidden", value: @article.permalink}/
          %input{name: "year", type: "hidden", value: @article.published_at.year}/
          %input{name: "month", type: "hidden", value: @article.published_at.month}/
          %input{name: "day", type: "hidden", value: @article.published_at.day}/

.clearfix
