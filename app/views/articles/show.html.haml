.post-wrapper
  %article#post-481.basic-post.post-picture.post.type-post.status-publish.format-image.has-post-thumbnail.hentry.category-fashion.tag-fashion-show.tag-photography.post_format-post-format-image
    .thumbnail.typing
      %h1.typing-carousel.txt-rotate{data: {period: 50, text: ['Hey, are you looking for me?']}}
    .post-inner
      .post-title
        %h1
          = @article.title
      .meta
        %span
          %i.fa.fa-calendar
          = @article.published_date
        %span
          %i.fa.fa-cubes
          = @article.category_name(I18n.default_locale)
        %span.btn-action{data: {name: 'up'}}
          %i.fa.fa-thumbs-up
          = I18n.t('action.like')
          = raw "(<count>#{@article.likes_count}</count>)"
        %span.btn-action{data: {name: 'down'}}
          %i.fa.fa-thumbs-down
          = I18n.t('action.dislike')
          = raw "(<count>#{@article.dislike_count}</count>)"
      .post-content{class: @article.category.try(:permalink)}
        = raw @article.content

        - if @article.embed?
          = audio_or_video_of_article(@article)

      - unless @article.tags.empty?
        %footer.content-footer
          .tags
            %label #{I18n.t('tips.tags')}:
            %strong= @article.tag_names

      .share-buttons
        - article_url = article_url(@article.params)
        - article_title = @article.title
        .addthis_toolbox.addthis_default_style
          %h4= I18n.t('tips.share_this_article')
          %a.addthis_button_facebook
            = link_to "https://www.facebook.com/sharer/sharer.php?u=#{article_url}&t=#{article_title}", rel: 'canonical', target: '_blank' do
              %span.fa.fa-facebook
          %a.addthis_button_twitter
            = link_to "https://twitter.com/share?url=#{article_url}&text=#{article_title}", rel: 'canonical', target: '_blank' do
              %span.fa.fa-twitter
          %a.addthis_button_weibo
            = link_to "http://service.weibo.com/share/share.php?url=#{article_url}&title=#{article_title}", rel: 'canonical', target: '_blank' do
              %span.fa.fa-weibo
          %a.addthis_button_tencent_weibo
            = link_to "http://v.t.qq.com/share/share.php?url=#{article_url}&title=#{article_title}", rel: 'canonical', target: '_blank' do
              %span.fa.fa-tencent-weibo
          %a.addthis_button_qq
            = link_to "http://sns.qzone.qq.com/cgi-bin/qzshare/cgi_qzshare_onekey?url=#{article_url}&title=#{article_title}", rel: 'canonical', target: '_blank' do
              %span.fa.fa-qq
          %a.addthis_button_google-plus
            = link_to "https://plus.google.com/share?url=#{article_url}", onclick: "javascript:window.open(this.href,
  '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;", rel: 'canonical', target: '_blank', alt: 'Share on Google+' do
              %span.fa.fa-google-plus

      - if false
        #post-nav
          .post-previous
            %span.title= I18n.t('tips.previous_post')
            %h3
              = 'Even the Celebrities Wanted to...'
          .post-next
            %span.title= I18n.t('tips.next_post')
            %h3
              = 'Even the Celebrities Wanted to...'

  / Author
  .single-author.box.clearfix
    .wrapper.clearfix
      .thumbnail
        = author_avatar
      .info.clearfix{style: 'width: 100%;margin-bottom: 20px;'}
        = I18n.t('tips.note2')

      = render partial: 'shared/social_links', locals: { class_name: 'social-profiles' }

    .clearfix

  - if @article.comments.count > 0
    #comment-widget.comments.box
      %h3.widget-title= I18n.t('tips.comments', count: @article.comments.count)
      .comments-list
        %ul
          - @article.comments.parent_comments.each do |comment|
            = render partial: 'comments', locals: { comment: comment }

  / Comment
  #comment-form-widget.comments.box
    #respond.comment-respond
      %h3#reply-title.comment-reply-title
        %h3.widget-title
          %i.fa.fa-comments
          = I18n.t('tips.leave_a_comment')
        %small
          %a#cancel-comment-reply-link.fa.fa-retweet{rel: "nofollow", style: "display:none;"}= I18n.t('action.cancel_reply')

      = form_tag comment_articles_path, method: :POST, class: 'comment-form', id: 'commentForm' do
        .comment-form-wrapper
          .clearfix
            %label= I18n.t('form.tips')
          .input.message
            %label
              = I18n.t('form.message')
              %span.red *
            %textarea#message{name: "comment[content]", required: true}
          .input.name
            %label
              = I18n.t('form.name')
              %span.red *
            %input#input-name.input-s{name: "comment[name]", type: "text", required: true}
          .input.email
            %label
              = I18n.t('form.email')
              %span.red *
            %input#input-email.input-s{name: "comment[email]", type: "email", required: true}
          .input.email
            %label= I18n.t('form.url')
            %input#input-url.input-s{name: "comment[link]", type: "url"}
          %p.form-submit
            = submit_tag I18n.t('form.submit'), class: 'btn btn-primary bg-green', id: 'submit'
            %input#comment_id{name: "comment_id", type: "hidden"}
            %input#comment_parent{name: "comment[comment_parent]", type: "hidden", value: "0"}

        %p{style: "display: none;"}
          %input{name: "permalink", type: "hidden", value: @article.permalink}
          %input{name: "year", type: "hidden", value: @article.published_at.year}
          %input{name: "month", type: "hidden", value: @article.published_at.month}
          %input{name: "day", type: "hidden", value: @article.published_at.day}

.clearfix

- content_for :javascript do
  :javascript
    (function($){
      typingRotateCarousel();
    })(jQuery)
