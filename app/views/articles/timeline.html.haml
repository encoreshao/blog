#timeline-wrapper
  %ol.timeline
    - @articles.each do |month, articles|
      %li
        %h2= month.strftime('%b, %Y')
        %ol
          - articles.each do |article|
            %li
              %h3= link_to article.title, article_path(article.params), target: '_blank'
              %p= article.published_at.strftime('%b %d, %Y')
    %li
      %h2 Today
