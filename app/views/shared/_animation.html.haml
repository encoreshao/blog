.fullpage-animated-box
  .top-box.animation
    .container-fluid.fullpage-content
      .row
      .row
        .col-sm-12
          .caption
            %h1= raw I18n.t('job_title')
            %br
            %span
              = raw I18n.t('tips.notes')
    .boxing
  .bottom-box.animation
    .container-fluid.fullpage-content
      .row
      .row
        .col-sm-12
          .caption.social-links
            = render partial: 'shared/social_links', locals: { class_name: '' }
    .boxing

- content_for :javascript do
  :javascript
    (function($){
      openingAnimation(Math.floor(Math.random()*3000));
    })(jQuery)
