%header#main-header
  #logo.wow.fadeIn.center.animated
    = link_to root_path do
      = I18n.t('title')

.sidebar-widgets
  #widget-warrior_about-2.widget.about
    %h3.widget-title
      %label
        %i.fa.fa-user
        = I18n.t('tips.about_the_author')
    .thumbnail
      %img.avatar{alt: I18n.t('author'), src: '/assets/photos/encore.jpg'}/
    %p
    %p{style: "text-indent: 1em;"}= I18n.t('tips.notes')
    .social
      %ul
        %li
          %a{href: "https://www.facebook.com/encore.shao", target: "_blank"}
            %i.fa.fa-facebook
        %li
          %a{href: "https://twitter.com/encoreshao", target: "_blank"}
            %i.fa.fa-twitter
        %li
          %a{href: "https://plus.google.com/+EncoreShao", target: "_blank"}
            %i.fa.fa-google-plus
        %li
          %a{href: "https://cn.linkedin.com/in/1encoreshao", target: "_blank"}
            %i.fa.fa-linkedin
        %li
          %a{href: "#", target: "_blank"}
            %i.fa.fa-youtube
        %li
          %a{href: "https://github.com/encoreshao", target: "_blank"}
            %i.fa.fa-github

  #widget-nav_menu-2.widget
    %h3.widget-title
      %label
        %i.fa.fa-bars
        = I18n.t('navigation.title')
    .menu-main-menu-container
      %ul#menu-main-menu.menu
        - ['home', 'about', 'fashion', 'life', 'travel', 'friendly_links'].each do |nav_name|
          %li
            %a
              %i.fa.fa-dot-circle-o
              = I18n.t('navigation.' + nav_name)

  #widget-search-3.widget.widget_search
    .search-box
      %form#search-form{action: root_path, method: "get"}
        %input#search-field{name: "s", type: "text", value: ""}/
        %a.submit{href: "javascript:void(0);", onclick: "jQuery('#search-form').submit();"}
          %i.fa.fa-search

  - if Comment.count > 0
    #widget-warrior_recent_posts-2.widget.warrior_recent_posts
      %h3.widget-title
        %label= I18n.t('tips.recent_posts')
      .blocks.recent-post-widget
        %ul
          - 5.times do |i|
            %li.post-481
              .thumbnail
                %img.attachment-thumbnail.size-thumbnail.wp-post-image{src: "/assets/photos/encore.jpg"}/
              .detail
                %a
                  Breath of
                  %strong
                    %em Fresh Air
                  in the Morning
                .meta
                  Mar 1st, 2015

  #widget-text-2.widget.widget_text
    .textwidget
      %a{href: "#"}
        %img{src: "http://placehold.it/250x250/eeeeee/555555&text=Banner+Image"}/

  #widget-tag_cloud-2.widget.widget_tag_cloud
    %h3.widget-title
      %label
        %i.fa.fa-tags
        = I18n.t('tips.tags')
    .tagcloud
      - full_atricle_tags.each do |tag|
        = link_to tag[0], '', class: 'tag-link-9.tag-link-position-1'

  %footer#footer
    %p
      - time_range = '2017'
      - time_range += " - #{Time.now.year}" if Time.now.year > 2017
      Copyright #{time_range}
      #{I18n.t('title')}
    %br
