.post-wrapper
  / Start: Post Type Image
  %article#post-481.basic-post.post-picture.post-481.post.type-post.status-publish.format-image.has-post-thumbnail.hentry.category-fashion.tag-fashion-show.tag-photography.post_format-post-format-image
    .thumbnail
      / %img.attachment-blog-image.size-blog-image.wp-post-image{src: banner_iamge_url}/
    .post-inner
      .post-title
        %h1
          = @article.title
      .meta
        %span
          %i.typcn.typcn-calendar
          = @article.published_date
        %span.category
          %i.typcn.typcn-bookmark
          = @article.category_name(I18n.default_locale)
        %span
          %i.typcn.typcn-time
          Last modified 9 months ago
      .post-content
        = raw @article.content
      %footer.content-footer
        .tags
          %i.typcn.typcn-bookmark
          %label Tags:
          = succeed "," do
            %a{href: "http://demo2.themewarrior.com/grateful/tag/fashion-show/", rel: "tag"} Fashion Show
          %a{href: "http://demo2.themewarrior.com/grateful/tag/photography/", rel: "tag"} Photography
        / AddThis Button BEGIN
        .share-buttons
          .addthis_toolbox.addthis_default_style
            %h4 Share this Article
            %a.addthis_button_facebook{"fb:like:layout" => "button_count"}
              %span.typcn.typcn-social-facebook
            %a.addthis_button_twitter
              %span.typcn.typcn-social-twitter
            %a.addthis_button_google_plusone_share{"g:plusone:size" => "medium"}
              %span.typcn.typcn-social-google-plus
            %a.addthis_button_pinterest_share{"pi:pinit:layout" => "horizontal", "pi:pinit:url" => "http://demo2.themewarrior.com/grateful/2015/03/01/breath-of-fresh-air-in-the-morning/"}
              %span.typcn.typcn-social-pinterest
            %a.addthis_button_email
              %span.typcn.typcn-mail
        :javascript
          var addthis_config = {"data_track_addressbar":false};
        %script{:src => "//s7.addthis.com/js/300/addthis_widget.js", type: "text/javascript"}
        / AddThis Button END
        #post-nav
          .post-previous
            %span.title Previous Post
            %h3
              %a{href: "http://demo2.themewarrior.com/grateful/2015/02/28/even-the-celebrities-wanted-to-dress-weather-appropriately-this-week/", :title => "Even the Celebrities Wanted to Dress <strong><em>Weather Appropriately</em></strong> This Week"} Even the Celebrities Wanted to Dress Weather...
        #related-posts
          .inner
            %h3.widget-title= I18n.t('tips.related_posts')
            %ul
              - 3.times do |i|
                %li
                  .thumbnail
                    %a
                      %img.attachment-small-thumb.size-small-thumb.wp-post-image{:src => "/assets/photos/encore.jpg"}/
                  %a Summer 2014 Style Inspirations Just for You
                  .meta Aug 12th, 2014

  / End: Post Type Image
