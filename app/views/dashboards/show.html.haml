.post-wrapper
  / Start: Post Type Image
  %article#post-481.basic-post.post-picture.post-481.post.type-post.status-publish.format-image.has-post-thumbnail.hentry.category-fashion.tag-fashion-show.tag-photography.post_format-post-format-image
    .thumbnail
      %img.attachment-blog-image.size-blog-image.wp-post-image{src: banner_iamge_url}/
    .post-inner
      .post-title
        %h1
          = @article.title
      .meta
        %span
          %i.fa.fa-calendar
          = @article.published_date
        %span
          %i.fa.fa-flag
          = @article.category_name(I18n.default_locale)
        %span
          %i.fa.fa-eye
          = distance_of_time_in_words(@article.last_reviewed_at || Time.zone.now, Time.zone.now)
      .post-content
        = raw @article.content
      %footer.content-footer
        .tags
          %i.fa.fa-bookmark
          %label #{I18n.t('tips.tags')}:
          - @article.tags.each do |tag|
            = tag.name

        / Add This Button BEGIN
        .share-buttons
          .addthis_toolbox.addthis_default_style
            %h4= I18n.t('tips.share_this_article')
            %a.addthis_button_facebook{"fb:like:layout" => "button_count"}
              %span.fa.fa-facebook
            %a.addthis_button_twitter
              %span.fa.fa-twitter
            %a.addthis_button_google_plusone_share{"g:plusone:size" => "medium"}
              %span.fa.fa-google-plus
            %a.addthis_button_pinterest_share{"pi:pinit:layout" => "horizontal", "pi:pinit:url" => "http://demo2.themewarrior.com/grateful/2015/03/01/breath-of-fresh-air-in-the-morning/"}
              %span.fa.fa-pinterest
            %a.addthis_button_email
              %span.fa.fa-mail

        / AddThis Button END
        #post-nav
          .post-previous
            %span.title= I18n.t('tips.previous_post')
            %h3
              %i.fa.fa-angle-double-left
              = 'Even the Celebrities Wanted to Dress Weather...'
        #related-posts
          .inner
            %h3.widget-title= I18n.t('tips.related_posts')
            %ul
              - 3.times do |i|
                %li
                  .thumbnail
                    %a
                      %img.attachment-small-thumb.size-small-thumb.wp-post-image{:src => "/assets/photos/encore.jpg"}/
                  %a Summer 2014 Style Inspirations Just for You
                  .meta Aug 12th, 2014

  / End: Post Type Image
  / Start author bio
  .single-author.box.clearfix
    %h3.widget-title
      %i.fa.fa-user
      = I18n.t('tips.about_the_author')
    .wrapper
      .thumbnail
        %img.avatar.avatar-80.photo{src: "/assets/photos/encore.jpg"}/
      .info
        %h5
          %a{href: root_path}= I18n.t('author')
        %p My kinda people, my kinda place. There's something special about this place. For wheat is the best food of man. They’re crispy and crunchy the whole year through. As long as we live, it’s you and me baby, There ain’t nothin’ wrong with that.
        %ul.social-profiles
          %li
            %a{href: "https://www.facebook.com/encore.shao", target: "_blank"}
              %i.fa.fa-facebook
          %li
            %a{href: "https://twitter.com/encoreshao", target: "_blank"}
              %i.fa.fa-twitter
          %li
            %a{href: "https://plus.google.com/+EncoreShao", target: "_blank"}
              %i.fa.fa-google-plus
          %li
            %a{href: "https://cn.linkedin.com/in/1encoreshao", target: "_blank"}
              %i.fa.fa-linkedin
          %li
            %a{href: "#", target: "_blank"}
              %i.fa.fa-youtube
          %li
            %a{href: "https://github.com/encoreshao", target: "_blank"}
              %i.fa.fa-github
    .clearfix

  / End author bio
  / START: RESPOND
  #comment-form-widget.comments.box
    #respond.comment-respond
      %h3#reply-title.comment-reply-title
        %h3.widget-title
          %i.fa.fa-comments
          = I18n.t('tips.leave_a_comment')
        %small
          %a#cancel-comment-reply-link{href: "/grateful/2015/03/01/breath-of-fresh-air-in-the-morning/#respond", rel: "nofollow", style: "display:none;"} Cancel Reply
      %form#commentform.comment-form{action: "http://demo2.themewarrior.com/grateful/wp-comments-post.php", method: "post"}
        .comment-form-wrapper
          .input.message
            %label= I18n.t('form.message')
            %textarea#message{name: "comment"}
          .input.name
            %label
              = I18n.t('form.name')
              %span.red *
            %input#input-name.input-s{name: "author", type: "text", value: ""}/
          .input.email
            %label
              = I18n.t('form.email')
              %span.red *
            %input#input-email.input-s{name: "email", type: "text", value: ""}/
          .input.email
            %label= I18n.t('form.website_url')
            %input#input-email.input-s{name: "url", type: "text", value: ""}/
          %p.form-submit
            %input#submit.btn.btn-primary{name: "submit", type: "submit", value: I18n.t('action.submit')}/
            %input#comment_post_ID{name: "comment_post_ID", type: "hidden", value: "481"}/
            %input#comment_parent{name: "comment_parent", type: "hidden", value: "0"}/
        %p{style: "display: none;"}
          %input#akismet_comment_nonce{name: "akismet_comment_nonce", type: "hidden", value: "e61be4e3a7"}/
        %p{style: "display: none;"}
          %input#ak_js{name: "ak_js", type: "hidden", value: "79"}/
    / #respond
  / END: RESPOND
.clearfix
