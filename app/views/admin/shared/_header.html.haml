%nav.navbar.navbar-expand-md.navbar-inverse.bg-inverse
  .container
    %button.navbar-toggler.navbar-toggler-right{"aria-controls" => "navbars", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbars", "data-toggle" => "collapse", :type => "button"}
      %span.navbar-toggler-icon
    %a.navbar-brand{href: root_path}= I18n.t('title')
    #navbars.collapse.navbar-collapse
      %ul.navbar-nav.mr-auto
        = render 'admin/shared/sidebar'
        %li.nav-item
          = link_to admin_user_path(current_user), class: "nav-link #{'active' if controller_name == 'users'}" do
            = current_user.display_name
        %li.nav-item
          = link_to destroy_user_session_path, class: 'nav-link', method: :delete, title: I18n.t('action.logout') do
            %i.fa.fa-sign-out

      %form.form-inline.my-2.my-lg-0
        %input.form-control.mr-sm-2{placeholder: "#{I18n.t('action.search')}......", type: "text", name: 'name', value: params[:name]}/
        %button.btn.btn-outline-success.my-2.my-sm-0{type: "submit"}= I18n.t('action.search')
