= link_to I18n.t('action.new'), new_admin_article_path
.table-responsive
  %table.table.table-striped
    %thead
      %tr
        %th= Article.human_attribute_name(:title)
        %th= Article.human_attribute_name(:category_id)
        %th= Article.human_attribute_name(:user_id)
        %th= Article.human_attribute_name(:is_published)
        %th= Article.human_attribute_name(:published_at)
        %th
    %tbody
      - collection.each do |resource|
        %tr
          %td= resource.title
          %td= resource.category.try("name_#{params[:locale] || I18n.default_locale}".to_sym)
          %td= resource.user.try(:author_name)
          %td= resource.is_published
          %td= resource.published_date
          %td
            = link_to resource_path(resource) do
              %i.fa.fa-eye
            = link_to edit_admin_article_path(resource) do
              %i.fa.fa-edit
            = link_to admin_article_path(resource), method: :DELETE do
              %i.fa.fa-trash



